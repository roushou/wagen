{
  "name": "wagen",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./src/app.ts",
  "scripts": {
    "start": "bun run ./src/app.ts",
    "dev": "bun --watch ./src/app.ts",
    "css": "tailwindcss --output public/static/style.css",
    "css:watch": "tailwindcss --watch --output public/static/style.css",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "check:types": "tsc --noEmit",
    "check:unsafe": "biome check . --write --unsafe",
    "ci": "biome ci"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "hono": "^4.5.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.1.8",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10"
  }
}
